    "eslint": "7.30.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.3.2",
    "prettier-plugin-prisma": "0.13.2",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.4",
    "prisma": "2.26.0",
